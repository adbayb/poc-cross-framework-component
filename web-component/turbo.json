{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/main",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"fix": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"verify": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"clean": {
			"outputs": []
		},
		"start": {
			"cache": false
		},
		"watch": {
			"cache": false
		}
	}
}
